{% extends 'base.html.twig' %}
{% block stylesheets %}
    {{ parent() }}
{% endblock %}
{% block nav %}
    {{ parent() }}
{% endblock %}
{% block body %}
    <div id="przyczynyModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Dodaj przyczyne choroby</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <input type="text" placeholder="Wpisz nazwe czynnika" class="form-control" id="nazwaCzynnika" required="required">
                    </div>
                    <div class="form-group">
                        <select id="typ_czynnika" class="form-control" required="required">
                            <option value="inf">Zakazny</option>
                            <option value="phi">Fizyczny</option>
                            <option value="alim">Alimentarny</option>
                            <option value="gen">Genetyczny</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Anuluj</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div id="wrapper">
        <div id="container">
            <div class="row">

                <div class="col-md-6 new_dis_form col-md-offset-1">
                    <h1>Dodaj nowÄ… chorobe</h1>
                    <form id="new_dis_form" method="post">
                        <div class="form-group">
                            <input type="text" class="form-control" name="form[name]" required="required"
                                   placeholder="Nazwa choroby">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="form[othernames]"
                                   placeholder="Nazwa lacinska i nazwy zwyczajowe">
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="form[patogenesis]"
                                   placeholder="Zwiezla charakterystyka patogenezy">
                        </div>
                        <div class="form-group">
                            <label for="pato_desc">Opis patogenezy</label>
                            <textarea class="form-control" rows="3" name="form[p_desc]"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="epi">Epidemiologia</label>
                            <textarea class="form-control" rows="3" name="form[epi]"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="diagno">Diagnostyka</label>
                            <textarea class="form-control" rows="3" name="form[diagno]"></textarea>
                        </div>
                        <div class="form-group">
                            <label for="diff">Roznicowanie</label>
                            <textarea class="form-control" rows="2" name="form[diff]"></textarea>
                        </div>
                        {{ form_widget(form._token) }}
                        <button type="submit" name="form[save]" class="btn btn-default">Zapisz</button>
                    </form>

                </div>
                <div class="col-md-3">
                    <button class="btn btn-default btn-block" data-toggle="modal" data-target="#przyczynyModal"
                    ">Dodaj
                    czynnik/przyczyne
                    </button>
                    <button class="btn btn-default btn-block">Dodaj objawy</button>
                    <button class="btn btn-default btn-block">Dodaj zmiany anatomo-patologiczne</button>
                    <button class="btn btn-default btn-block">Dodaj badania dodatkowe</button>
                </div>

            </div>


        </div>
    </div>
{% endblock %}