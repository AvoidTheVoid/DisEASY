                    <button class="btn btn-default btn-block" onclick="$('#czynnik').addClass('uncollapsed');">Dodaj czynnik/przyczyne</button>
                    <div class="" id="czynnik"></div>
                    <button class="btn btn-default btn-block">Dodaj objawy</button>
                    <div class="" id="objawy"></div>
                    <button class="btn btn-default btn-block">Dodaj zmiany anatomo-patologiczne</button>
                    <div class="" id="anapat"></div>
                    <button class="btn btn-default btn-block">Dodaj badania dodatkowe</button>
                    <div class="" id="dodatkowe"></div>
